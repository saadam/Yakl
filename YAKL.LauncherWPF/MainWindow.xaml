<Window x:Class="YAKL.LauncherWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ya="clr-namespace:YAKL.Core;assembly=YAKL.Core"
        xmlns:local="clr-namespace:YAKL.LauncherWPF"
        mc:Ignorable="d"
        x:Name="mainWindow"
        Title="MainWindow" Height="760" Width="966">
    <Window.Resources>
        <local:BoolToAsteriskConverter x:Key="BoolToAsteriskConverter" />
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="c:\\Users\\adams\\Downloads\\mods_submenu.png"  TileMode="None" Stretch="UniformToFill" />
        </Grid.Background>

        <StackPanel Orientation="Vertical" Margin="61,59,705,-49" Width="270">
            <ListBox x:Name="lbMods" SelectedValue="{Binding SelectedMod}" ItemsSource="{Binding Mods}" Width="270">
                <ListBox.Background>
                    <SolidColorBrush Color="White" Opacity="0" />
                </ListBox.Background>
                <d:ListBox.ItemsSource>
                    <x:Array Type="{x:Type ya:LocalMod}">
                        <ya:LocalMod Name="Seattle" />
                        <ya:LocalMod Name="London" />
                        <ya:LocalMod Name="Panama" />
                    </x:Array>
                </d:ListBox.ItemsSource>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Width="250">
                            <TextBlock Text="{Binding Name}" Foreground="Red" />
                            <TextBlock Text="{Binding NeedUpdate, Converter={StaticResource BoolToAsteriskConverter}}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="Launch game" Command="{Binding LaunchGame}" Width="100" />
        </StackPanel>
        <StackPanel Orientation="Vertical" DataContext="{Binding SelectedMod}" Margin="400,46,66,-46" Width="500">
            <TextBlock Text="{Binding Name}" Foreground="Red" Height="40" />
            <Image Source="{Binding PreviewPngPath}" Width="300" Height="400" />
            <TextBlock Text="{Binding Description}" Foreground="Red" />

            <Button Foreground="Red"  Content="Update" Command="{Binding UpdateMod}" DataContext="{Binding DataContext, ElementName=mainWindow}"  CommandParameter="{Binding SelectedMod}">
                <Button.Background>
                    <SolidColorBrush Opacity="0" />
                </Button.Background>
                <Button.BorderBrush>
                    <SolidColorBrush Color="Red" />
                </Button.BorderBrush>
            </Button>
        </StackPanel>
    </Grid>
</Window>